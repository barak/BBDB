;; on Debian GNU/Linux
;;
;;
(if (not (file-exists-p "/usr/share/emacs/site-lisp/bbdb"))
    (message "Package bbdb removed but not purged.  Skipping setup.")
  (setq load-path
        (cons
         (concat "/usr/share/" (symbol-name debian-emacs-flavor)
                 "/site-lisp/bbdb")
         load-path))

  ;; (require 'message)

  ;; http://bugs.debian.org/85019
  (setq bbdb-sound-files nil)
  (setq bbdb-sound-player nil)
  (setq bbdb-sounds-directory nil)

  ;; (require 'bbdb)
  ;; (bbdb-initialize)

  (require 'bbdb-autoloads))
